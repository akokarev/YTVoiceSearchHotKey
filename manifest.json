{
    "name": "YTVoiceSearchHotKey",
    "version": "1.2.46",
    "description": "HotKey for YouTube voice search button",
    "manifest_version": 3,
	"author": "Anton Kokarev (net-files@yandex.ru)",
	"homepage_url": "https://github.com/akokarev/YTVoiceSearchHotKey",
	"update_url": "https://raw.githubusercontent.com/akokarev/YTVoiceSearchHotKey/main/updates.xml",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["tabs", "scripting"],
	"host_permissions": ["https://www.youtube.com/*"],
    "action": {},
    "icons": {
        "16": "/assets/icon-16.png",
        "32": "/assets/icon-32.png",
        "48": "/assets/icon-48.png",
        "128": "/assets/icon-128.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": "Ctrl+Up",
            "description": "Click voice search button"
        }
    }
}